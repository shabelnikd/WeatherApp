<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="18dp"
    android:background="@android:color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/tvHourTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"

        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:shadowColor="#20000000"
        android:shadowDx="-10"
        android:shadowDy="10"
        android:layout_marginTop="12dp"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="28Â°C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    
    <ImageView
        android:id="@+id/tvHourIcon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/tvHourTemp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/clear_day"
        />


    <TextView
        android:id="@+id/tvHourTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_marginBottom="20dp"

        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:shadowColor="#20000000"
        android:shadowDx="-10"
        android:shadowDy="10"
        android:layout_marginTop="26dp"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="17:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHourIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>